# AI Module Environment Configuration

# Flask/FastAPI Configuration
FLASK_ENV=development
API_HOST=0.0.0.0
API_PORT=5000

# Model Configuration
MODEL_PATH=./models
DATA_PATH=./data
EMBEDDINGS_PATH=./embeddings

# GPU Configuration
# Set to 'true' to force GPU usage, 'false' to use CPU
USE_GPU=true
# GPU memory fraction (0.0 to 1.0) - limits GPU memory usage
GPU_MEMORY_FRACTION=0.8

# Backend API Configuration
BACKEND_API_URL=http://localhost:8080/api
BACKEND_API_TIMEOUT=30

# Training Configuration
BATCH_SIZE=32
EPOCHS=50
LEARNING_RATE=0.001
IMAGE_SIZE=224

# Visual Search Configuration
MAX_RESULTS=10
SIMILARITY_THRESHOLD=0.60
EXACT_MATCH_THRESHOLD=0.90
HIGH_MATCH_THRESHOLD=0.75

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/ai_module.log

# Security (for production)
API_KEY=your_secret_api_key_here
ALLOWED_ORIGINS=http://localhost:4200,http://localhost:8080
