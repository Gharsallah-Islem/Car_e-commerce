# ==============================================================================
# AutoParts Store - Environment Configuration
# ==============================================================================
# Copy this file to .env and configure your values

# ==============================================================================
# Database Configuration
# ==============================================================================
POSTGRES_DB=ecommercespareparts
POSTGRES_USER=lasmer
POSTGRES_PASSWORD=lasmer

# ==============================================================================
# Backend Configuration
# ==============================================================================
SPRING_PROFILES_ACTIVE=prod
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-256-bits

# Stripe Payment (replace with your keys)
STRIPE_API_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Google OAuth2 (replace with your credentials)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# ==============================================================================
# Frontend Configuration
# ==============================================================================
API_URL=http://localhost:8080/api

# ==============================================================================
# AI Module Configuration
# ==============================================================================
MODEL_PATH=/app/models
AI_MODULE_URL=http://ai-module:5000

# ==============================================================================
# pgAdmin Configuration (optional)
# ==============================================================================
PGADMIN_DEFAULT_EMAIL=admin@carecommerce.com
PGADMIN_DEFAULT_PASSWORD=admin
