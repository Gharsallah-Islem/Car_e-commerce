<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/screen_padding">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checkout"
            android:textSize="@dimen/text_title"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="@dimen/spacing_lg" />

        <!-- Delivery Location Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/corner_radius_lg"
            app:cardElevation="4dp"
            android:layout_marginBottom="@dimen/spacing_md">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/card_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Delivery Information"
                    android:textSize="@dimen/text_body"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/addressLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full Address"
                    style="@style/InputStyle"
                    app:errorEnabled="true"
                    android:layout_marginBottom="@dimen/spacing_sm">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/addressEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPostalAddress|textMultiLine"
                        android:minLines="2"
                        android:maxLines="3"
                        android:gravity="top"
                        android:padding="@dimen/spacing_md" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/phoneLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact Phone"
                    style="@style/InputStyle"
                    app:errorEnabled="true"
                    android:layout_marginBottom="@dimen/spacing_sm">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/phoneEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:padding="@dimen/spacing_md" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/notesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Delivery Notes (Optional)"
                    style="@style/InputStyle"
                    app:errorEnabled="true"
                    android:layout_marginBottom="@dimen/spacing_sm">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/notesEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:minLines="2"
                        android:maxLines="3"
                        android:gravity="top"
                        android:padding="@dimen/spacing_md" />
                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/latLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Latitude"
                        style="@style/InputStyle"
                        app:errorEnabled="true"
                        android:layout_marginEnd="@dimen/spacing_sm">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/latEdit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal|numberSigned"
                            android:text="36.8065" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/lngLayout"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Longitude"
                        style="@style/InputStyle"
                        app:errorEnabled="true"
                        android:layout_marginStart="@dimen/spacing_sm">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/lngEdit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal|numberSigned"
                            android:text="10.1815" />
                    </com.google.android.material.textfield.TextInputLayout>
                </LinearLayout>

                <!-- Select on Map Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/selectOnMapButton"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:text="ðŸ“ Select on Map"
                    app:icon="@drawable/ic_location_pin"
                    app:iconGravity="textStart" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Payment Method Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/corner_radius_lg"
            app:cardElevation="4dp"
            android:layout_marginBottom="@dimen/spacing_lg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/card_padding">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’³ Payment Method"
                    android:textSize="@dimen/text_body"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="@dimen/spacing_md" />

                <RadioGroup
                    android:id="@+id/paymentRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/codRadio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cash on Delivery"
                        android:textSize="@dimen/text_body"
                        android:padding="@dimen/spacing_sm"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/stripeRadio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pay with Card (Stripe)"
                        android:textSize="@dimen/text_body"
                        android:padding="@dimen/spacing_sm" />
                </RadioGroup>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Place Order Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/placeOrderButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:text="Place Order"
            android:textSize="@dimen/text_body"
            android:textStyle="bold"
            app:cornerRadius="@dimen/corner_radius_md" />

    </LinearLayout>
</ScrollView>
