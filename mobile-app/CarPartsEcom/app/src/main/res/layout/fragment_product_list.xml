<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <!-- Toolbar with Logout Button -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:paddingTop="24dp"
        android:minHeight="?attr/actionBarSize"
        app:title="Car Parts Shop"
        app:titleTextColor="@color/white"
        app:menu="@menu/product_menu" />

    <!-- Search Bar -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_md"
        app:cardCornerRadius="@dimen/corner_radius_md"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/spacing_sm">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/searchEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="ðŸ” Search products..."
                android:background="@android:color/transparent"
                android:inputType="text"
                android:imeOptions="actionSearch"
                android:padding="@dimen/spacing_sm" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/clearSearchButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ•"
                android:visibility="gone"
                android:minWidth="48dp"
                android:minHeight="48dp"
                style="@style/Widget.MaterialComponents.Button.TextButton" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Category Chips -->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:paddingStart="@dimen/spacing_md"
        android:paddingEnd="@dimen/spacing_md"
        android:layout_marginBottom="@dimen/spacing_sm">

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/categoryChipGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            app:selectionRequired="false">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:checked="true"
                style="@style/Widget.MaterialComponents.Chip.Choice" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipBrakes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Brakes"
                style="@style/Widget.MaterialComponents.Chip.Choice" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipEngine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Engine"
                style="@style/Widget.MaterialComponents.Chip.Choice" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipIgnition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ignition"
                style="@style/Widget.MaterialComponents.Chip.Choice" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chipElectrical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Electrical"
                style="@style/Widget.MaterialComponents.Chip.Choice" />
        </com.google.android.material.chip.ChipGroup>
    </HorizontalScrollView>

    <!-- Sort Filter -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_md"
        android:layout_marginEnd="@dimen/spacing_md"
        android:layout_marginBottom="@dimen/spacing_sm"
        app:cardCornerRadius="@dimen/corner_radius_md"
        app:cardElevation="2dp">

        <Spinner
            android:id="@+id/sortSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:padding="@dimen/spacing_sm"
            android:background="@android:color/transparent" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Products Grid -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/productsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/spacing_sm"
        android:clipToPadding="false" />

</LinearLayout>

