<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/screen_padding"
        android:gravity="center">

        <!-- Icon -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”‘"
            android:textSize="80sp"
            android:layout_marginTop="@dimen/spacing_xl" />

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset Password"
            android:textSize="@dimen/text_title"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginTop="@dimen/spacing_lg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your email to receive a reset code"
            android:textSize="@dimen/text_caption"
            android:textColor="@color/text_secondary"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/spacing_sm"
            android:layout_marginBottom="@dimen/spacing_xl" />

        <!-- Form Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/corner_radius_lg"
            app:cardElevation="4dp"
            android:layout_marginBottom="@dimen/spacing_lg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/card_padding">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/emailLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email"
                    style="@style/InputStyle"
                    app:errorEnabled="true"
                    android:layout_marginBottom="@dimen/spacing_sm">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/emailEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:padding="@dimen/spacing_md" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/codeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Reset Code"
                    style="@style/InputStyle"
                    app:errorEnabled="true"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/spacing_sm">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/codeEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="6"
                        android:padding="@dimen/spacing_md" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/newPasswordLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="New Password"
                    style="@style/InputStyle"
                    app:endIconMode="password_toggle"
                    app:errorEnabled="true"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/spacing_md">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/newPasswordEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:padding="@dimen/spacing_md" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/submitButton"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:text="Send Reset Code"
                    android:textSize="@dimen/text_body"
                    android:textStyle="bold"
                    app:cornerRadius="@dimen/corner_radius_md" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Back to Login -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â† Back to Login"
            android:textSize="@dimen/text_caption"
            style="@style/Widget.Material3.Button.TextButton" />

    </LinearLayout>
</ScrollView>
